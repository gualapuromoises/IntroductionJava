/* This program transforms mass of a chemical g*mol-1 to mol*l-1 */
import java.util.Scanner;
public class ConcTranform {
	 public static void main(String[] args) {
		 Scanner scan = new Scanner(System.in);
		 System.out.print("Enter Mass Concentration value (g*l-1): ");
		 double gconc = scan.nextDouble();
		 System.out.println("Your mass concentration is " + gconc +" g*l-1");
	 
		 System.out.print("Enter molar mass value (g*mol-1): ");
		 if(scan.hasNextDouble() == true) {
		 
			 double molmass = scan.nextDouble();
			 System.out.println("Your molar mass is " + molmass +" g*mol-1");
	 
			 /* define restriction before divide values */
			 if (molmass<=0) {
				 System.out.println("ERROR");
				 return; //Stops going further because of error
			 	}

			 scan.close();
	 
			 double molconc = gconc / molmass;
			 System.out.println("Calculated molar concentration is " + molconc + "mol*l-1");
		 	}
		 else {
			 System.out.print("Keep working");
		 	}
	 	}
	}
